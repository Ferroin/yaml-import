{
  "name": "yaml-import",
  "version": "0.1.1",
  "author": "Rafa Mel",
  "description": "Import files and directories in YAML for a modular design",
  "homepage": "https://github.com/rafamel/yaml-import",
  "main": "./lib/index",
  "bin": {
    "yimp": "bin/yimp.js"
  },
  "scripts": {
    "lint": "eslint lib/*.js && eslint bin/*.js",
    "lint:test": "eslint test/*.js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "test": "npm run lint:test && jest ./test/*.js --runInBand --runTestsByPath --verbose",
    "watch": "nodemon ./node_modules/.bin/run-s lint test",
    "pre": "npm run prepublishOnly",
    "prepublishOnly": "run-s lint lint:* && jest ./test/*.test.js --runTestsByPath",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/yaml-import"
  },
  "license": "MIT",
  "keywords": [
    "yaml",
    "include",
    "import",
    "require",
    "js-yaml"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/yaml-import/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/yaml-import/raw/master/LICENSE"
    }
  ],
  "dependencies": {
    "fs-readdir-recursive": "^1.0.0",
    "js-yaml": "^3.10.0",
    "namify": "^0.1.3"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^21.2.1",
    "markdownlint-cli": "^0.3.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "yargs": "^9.0.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
